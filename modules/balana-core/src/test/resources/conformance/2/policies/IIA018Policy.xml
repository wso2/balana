<?xml version="1.0" encoding="UTF-8"?>
<Policy
      xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os
        access_control-xacml-2.0-policy-schema-os.xsd"
      PolicyId="urn:oasis:names:tc:xacml:2.0:conformance-test:IIA018:policy"
      RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:deny-overrides">
    <Description>
        Policy for Conformance Test IIA018.
    </Description>
    <Target/>
    <Rule
          RuleId="urn:oasis:names:tc:xacml:2.0:conformance-test:IIA018:rule"
          Effect="Permit">
        <Description>
            Anyone can perform any action on any resource if current-time
            is 05:23:47-05:00
        </Description>
        <Condition>
<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:date-equal">
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:date-one-and-only">
                <EnvironmentAttributeDesignator
                      AttributeId="urn:oasis:names:tc:xacml:1.0:environment:current-date"
                      DataType="http://www.w3.org/2001/XMLSchema#date"/>
            </Apply>
            <AttributeValue
                  DataType="http://www.w3.org/2001/XMLSchema#date">2002-03-22</AttributeValue>
        
</Apply></Condition>
    </Rule>
</Policy>
